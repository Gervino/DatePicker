@page "/"
@using DatePickerComponent.Pages.Components

<h1>Use DatePicker component</h1>

<DatePicker InitialDate="DefaultDate" DateSelected="OnDateSelected"></DatePicker>
<h4>Selected Date:@SelectedDate</h4>

@code{
    public DateTime DefaultDate { get; set; }

    public DateTime SelectedDate { get; set; }

    protected override void OnInitialized()
    {
        DefaultDate = new DateTime(2020, 3, 21);
    }

    public void OnDateSelected(DateTime dt)
    {
        SelectedDate = dt;
    }
}

